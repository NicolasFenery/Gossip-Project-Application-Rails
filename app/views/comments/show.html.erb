  <div class="container col-md-8 order-md-1">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <div class="form-group">
            <%= label_tag 'Commentaire ✏️' %>
            <%= text_area_tag 'content', @content, class: "form-control"  %>
      </div>

      <div class="form-group">
            <%= submit_tag "Créer", class: "btn btn-lg btn-block btn-primary mt-3" %>
      </div>

      <% end %>
</div>